<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/layout_top"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/cardView"
            app:elevation="@dimen/layout_top"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/layout_top"
                android:orientation="horizontal"
                android:background="@color/cardview_light_background">

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="40dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/layout_margin_right"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_report_problem_24"
                />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brijesh"
                    android:textColor="#000000"
                    android:id="@+id/txtTitle"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="0sp"
                    android:id="@+id/txtDescription"
                    android:layout_margin ="0dp"
                    android:text="How are you"/>
            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_gravity="top"
                android:layout_toRightOf="@id/txtTitle"
                android:text="10:43Am"
                android:textSize="12sp"/>
        </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>